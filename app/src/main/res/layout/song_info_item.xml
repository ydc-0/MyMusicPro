<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/media_item_height">

    <ImageView
        android:id="@+id/play_eq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/media_item_icon_margin_start"
        android:contentDescription="@string/play_item"
        android:src="@drawable/music_item_icon_play"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/media_item_text_margin_start"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mymusic_song"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/media_item_line1_up"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="歌曲名"
            android:textColor="#0d0c0c"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/media_item_line2_up"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mymusic_singer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="歌手"
                android:textColor="#0d0c0c"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_mymusic_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/media_item_time_end"
                android:text="时间"
                android:textColor="#0d0c0c"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>